<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="application.HospitalController"
            prefWidth="700" prefHeight="500">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Form Fields -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="75"/>
                </columnConstraints>

                <!-- Hospital ID -->
                <Label text="Hospital ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="hospitalIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Name -->
                <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Contact -->
                <Label text="Contact:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="contactField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Location -->
                <Label text="Location:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="locationField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Billing Code -->
                <Label text="Billing Code:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="billingCodeField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Action Buttons -->
            <HBox spacing="10">
                <Button text="Add" onAction="#addHospital"/>
                <Button text="Update" onAction="#updateHospital"/>
                <Button text="Delete" onAction="#deleteHospital"/>
            </HBox>

            <!-- TableView -->
            <TableView fx:id="hospitalTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="hospitalIdColumn" text="Hospital ID" prefWidth="100"/>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="contactColumn" text="Contact" prefWidth="200"/>
                    <TableColumn fx:id="locationColumn" text="Location" prefWidth="250"/>
                    <TableColumn fx:id="billingCodeColumn" text="Billing Code" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
